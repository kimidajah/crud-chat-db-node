<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hilman Tuto NOde 1</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h3><%= title %></h3>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Nama</th>
            <th scope="col">Kelas</th>
          </tr>
        </thead>
        <tbody>
          <% for (let user of users) { %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <th scope="row"><%= user.nama %></th>
            <th scope="row"><%= user.kelas %></th>
          </tr>
          <% } %>
        </tbody>
      </table>
      <form action="/tambah" method="post">
        <h3>Tambah Murid Baru</h3>
        <div class="mb-3">
          <label for="nama" class="form-label"
            >Nama Lengkap</label
          >
          <input
            type="text"
            name="nama"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label for="kelas" class="form-label">Kelas</label>
          <input
            type="text"
            name="kelas"
            class="form-control"
          />
        </div>
        <input type="submit" class="btn btn-danger" value="Tambahkan">
      </form>
      <a class="float-end mb-4" href="/chat">forum diskusi</a>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
